    
    
    
    
    
    #include <stdio.h>
    #include <ctype.h> 
    #include <math.h>
    
    void main()
    {
     float f;              
     int index, n = 75;
    
     f = 10000.0 / 3.0;
     for(index = 1; index < n; index++)
      {
       f = f / 10.0;
       printf(" %d %e\n", index, f);
      }
    }
    
