
   function_1()
       {
       int good_auto_array[10];
       int *integer_pointer;

       good_auto_array[1] = 5;
       *(good_auto_array + 1) = 5;

       /* Point it to meaningful address */
       integer_pointer = good_auto_array;

       *(integer_pointer+1) = 5;      
       integer_pointer[1] = 5;            
       }

