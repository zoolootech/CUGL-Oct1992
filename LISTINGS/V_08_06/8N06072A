*****Listing 1*****


     #include <stdio.h>

     function()
       {
       FILE *file_printer;     /* Pointer to a file */
       int x, y, z;
       
       x = 5;             
       y = 6;             
       z = x + y;         

       /* Open the printer */
       file_printer = fopen("LST","w");    

       /* Print the line */
       fprintf(file_printer, "The answer is %10d", z);

       /* Close the printer */
       fclose(file_printer);
       }

