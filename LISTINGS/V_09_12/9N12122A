   int find_maximum(one, two, three)
   int one, two, three;  /* Input values to compare */
       {
       int minimum;
       if (one > two)
           if (one > three)
               maximum = one;
           else
               maximum = three;
       else           
               maximum = two;
           else
               maximum = three;
       return maximum;
       }
