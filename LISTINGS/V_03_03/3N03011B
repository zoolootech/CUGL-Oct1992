/*
     File name:    FADER.H
     Description:  Global Constants
*/

/* Color number for WM_CTLCOLOR message */
#define CTLCOLOR_FADER      100

/* Fader Button's class-specific window messages. */
#define FDRM_SETRANGE      (WM_USER + 0)
#define FDRM_GETRANGE      (WM_USER + 1)
#define FDRM_SETLOGVALUE   (WM_USER + 2)
#define FDRM_SETPHYSVALUE  (WM_USER + 3)
#define FDRM_GETLOGVALUE   (WM_USER + 4)
#define FDRM_GETPHYSVALUE  (WM_USER + 5)

/* Fader Button's notification codes sent in HIWORD of lParam
   during a WM_COMMAND message. */
#define FDRN_THUMBTRACK    1
#define FDRN_ENDFADER      2

/* Enables return of FDRN_THUMBTRACK messages to parent.
   Should run faster if it doesn't have to send these */
#define FDRS_TRACK         0x0001L
