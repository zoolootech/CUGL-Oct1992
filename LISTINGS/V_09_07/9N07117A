/*
 * ln_seq.h - line number sequence interface
 */

class ln_seq
    {
public:
    ln_seq();
    ln_seq(unsigned n);
    ~ln_seq();
    void add(unsigned n);
    void print();
private:
    struct listnode
        {
        unsigned number;
        listnode *next;
        };
    listnode *first, *last;
    };

