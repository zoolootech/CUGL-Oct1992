
     #include "stdio.h"
     
     int main(void);
     void inhex(int i);
     void indec(int i);
     
     int main(void)
          {
          void (print_int *)(int i);
          int i = 123;
          
          print_int = inhex;
          print_int(i);
          print_int = indec;
          print_int(i);
          }
     
     void inhex(int i)
          {
          printf("%x\n",i);
          }
     
     void indec(int i)
          {
          printf("%x\n",i);
          }

