
     case WM_COMMAND:
          switch(wParam){
             case IDM_ITEM1_1:
                  DoSomething();
                  break;
             case IDM_ITEM1_2:
                  DoSomethingElse();
                  break;
             case IDM_ITEM1_3:
                  DoSomeMoreProcessing();
                  break;
             case IDM_EXIT:
                  SendMessage(hWnd,WM_DESTROY,0,0L);
                  break;
             default:break;
             }
          break;

