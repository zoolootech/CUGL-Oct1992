#ifndef __GENERAL__    /* once only */
# define  __GENERAL__  1

# define  ERROR    (-1)         /* error return */
# define  FALSE    0            /* boolean absolutes */
# define  TRUE     (!0)
# define  YES      TRUE         /* ... and aliases */
# define  NO       FALSE
# define  ON       TRUE
# define  OFF      FALSE
#define   UpArrow  0x4800
#define   DnArrow  0x5000
#define   RtArrow  0x4D00
#define   LftArrow 0x4B00
#define   PgUp     0x4900
#define   PgDn     0x5100
#define   EscKey   0x011B
#define   EnterKey 0x1C0D
#define   F1Key    0x3B00
#define   F2Key    0x3C00
#define   F3Key    0x3D00
#define   HomeKey  0x4700
#define   EndKey   0x4F00
#define   AltX     0x2D00

#define   CR       0x0d
#define   LF       0x0a
#define   SP       0x20
#define   BELL     0x07

#define   DOS33    0x31e
#define   DOS4     0x400



typedef   unsigned char  BYTE;  /* 8-bit bytes */
typedef   unsigned short WORD;  /* 16-bit words */
typedef   unsigned long  DWRD;  /* 32-bit doublewords */
typedef   BYTE           BOOL;  /* boolean switches */
#endif  /* __GENERAL__ */
