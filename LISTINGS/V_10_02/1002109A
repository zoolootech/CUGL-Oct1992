
   char *out_string;
   switch (x) 
      {
      case 0:  
           out_string = "zero"; 
           break;
      case 1:  
           out_string = "one" ; 
           break;
      case 2:  
           out_string = "two" ; 
           break;
      default: 
           out_string = "lots"; 
           break;
       }

   printf ("The value is '%s'\n", out_string);

