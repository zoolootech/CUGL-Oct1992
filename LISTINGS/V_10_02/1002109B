
   int index;   
   #define SIZE_OUT_STRINGS 4

   char *out_strings[SIZE_OUT_STRINGS] 
       = {"zero", "one", "two", "lots"}; 

   if (x < 0 || x >= SIZE_OUT_STRINGS - 1)
       index = SIZE_OUT_STRINGS - 1;
   else
       index = x;  
   printf ("The value is '%s'\n", out_strings[index]);

