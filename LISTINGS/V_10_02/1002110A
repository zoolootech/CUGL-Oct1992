
char *getstr();
main()
    {
    char *str ;
    printf("%s\n",str = getstr()) ;       /* prints "Old Value" 
*/
    strcpy(str,"New Value") ;
    printf("%s\n",str = getstr()) ;       /* prints "New Value" 
*/
    }

char *getstr()
    {
    char *p = "Old Value" ;
    return p ;
    }

