
      init_menu();
      while (choice != EXIT_PROGRAM)
      {
            choice = INVALID;
            key = Input(&x, &y);
            choice = disp_menu(key, x, y);
            key = 0;
            switch (choice)
            {
                 case FIRST_CHOICE:
                       execute_first();
                       break;

                 case SECOND_CHOICE:
                       execute_second();
                       break;

                 etc.
            }
      }

