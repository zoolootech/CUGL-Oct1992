
      nChoice = disp_menu();
      
      while (nChoice != EXIT)
      {
            switch (nChoice)
            {
                 case CHOICE_1:
                       DoSomething();
                       break;

                 case CHOICE_2:
                       DoSomething();
                       break;

                 etc.
            }
            nChoice = disp_menu();
      }

