//
// test2.cpp
//
#include <iostream.h>
#include "rat5.h"

int main()
    {
    int i;
    rational r1 (1, 2);
    rational r2 (3, 5);

    for (i = 0; i < 3; ++i)
        {
        cout << "r1 = " << r1 << '\n';
        cout << "r2 = " << r2 << '\n';
        r1 = (r1 + r2) / rational(1, 2);
        r2 = r2 * rational(2, 3) - r1;
        }
    return 0;
    }




