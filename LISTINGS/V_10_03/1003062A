******
main()
    {
    int urn[3] = {100,200,300};
    int *ptr;

    ptr = urn;
    printf("&ptr = %u, ptr = %u, *ptr = %u\n", &ptr, ptr, *ptr);
    printf("*ptr = %u, &ptr = %u, ptr = %u\n", *ptr, &ptr, ptr);
    printf("ptr = %u, *ptr = %u, &ptr = %u\n\n", ptr, *ptr, &ptr);

    printf("urn[0] = %u, &urn[0] = %u\n", urn[0], &urn[0]);
    printf("&urn[0] = %u, urn[0] = %u\n\n", &urn[0], urn[0]);
    getch();
    }



