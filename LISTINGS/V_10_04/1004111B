void find_min_max(one, two, three, minimum, maximum)
int one, two, three;
int *minimum;  
int *maximum;
   {
   if (one > two)
       *minimum = two;
   else
       *minimum = one;
   if (three < *minimum)
       *minimum = three;

   if (one < two)
       *maximum = two;
   else
       *maximum = one;
   if (three > *maxmium)
       *maximum = three;

   return;
   }
